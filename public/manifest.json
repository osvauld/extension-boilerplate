{
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2,
  "name": "My Svelte Chrome Extension",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
